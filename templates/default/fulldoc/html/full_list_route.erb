<% n = 1 %>
<% @items.each do |item| %>
  <li class="r<%= n %> <%= item.has_tag?(:deprecated) ? 'deprecated' : '' %>">
    <%= linkify item, h(item.real_name) %>
    <% if item.namespace && !item.namespace.root? %>
      <small><%= item.namespace %></small>
    <% else %>
      <small>Top Level Namespace</small>
    <% end %>
  </li>
  <% n = n == 2 ? 1 : 2 %>
<% end %>
