<% if object.has_tag?(:request) %>
  <div class="examples">
    <h3>Request:</h3>
    <% object.tags(:request).each do |tag| %>
      <h4><%= htmlify_line(tag.name) %></h4>
      <pre class="example code source_code"><%= html_syntax_highlight(tag.text, :plain) %></pre>
    <% end %>
  </div>
<% end %>
